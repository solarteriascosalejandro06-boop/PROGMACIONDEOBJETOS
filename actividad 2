import java.util.Scanner;

public class CalculadoraCirculo {
    
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        try {
            System.out.print("Ingresa el radio del c√≠rculo: ");
            double radio = scanner.nextDouble();
            
            if (radio < 0) {
                System.out.println("‚ùå El radio no puede ser negativo");
            } else {
                double longitud = calcularLongitud(radio);
                double area = calcularArea(radio);
                
                System.out.println("\nüìê RESULTADOS:");
                System.out.printf("üìè Longitud de la circunferencia: %.2f%n", longitud);
                System.out.printf("üîµ √Årea del c√≠rculo: %.2f%n", area);
                
                // Mostrar f√≥rmulas
                System.out.println("\n--- F√≥rmulas utilizadas ---");
                System.out.printf("Longitud = 2œÄr = 2 √ó %.4f √ó %.2f = %.2f%n", Math.PI, radio, longitud);
                System.out.printf("√Årea = œÄr¬≤ = %.4f √ó %.2f¬≤ = %.2f%n", Math.PI, radio, area);
            }
            
        } catch (Exception e) {
            System.out.println("‚ùå Error: Ingresa un n√∫mero v√°lido");
        } finally {
            scanner.close();
        }
    }
    
    public static double calcularLongitud(double radio) {
        return 2 * Math.PI * radio;
    }
    
    public static double calcularArea(double radio) {
        return Math.PI * Math.pow(radio, 2);
    }
}
